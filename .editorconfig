# editorconfig.org
# https://gist.github.com/barcia/8c8e8196d634c1eebf2aacf5f9d908e6
# Version: 1

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,scss,sass,css,js}]
indent_size = 2

[*.xml]
indent_size = 2

[*.json]
indent_size = 4

[*.{txt,md,markdown}]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.{sh,bash}]
indent_size = 4
